{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "esModuleInterop" : true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "target": "es2017",
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "types": [],
